# disable zsh autocompletion
setopt autolist
setopt noautomenu

export GOPATH=/Users/nwagensonner/Development/Go
export GOBIN=/Users/nwagensonner/Development/Go/bin

export PATH=$PATH:/usr/local/opt/go/libexec/bin
export PATH=$PATH:/Users/nwagensonner/bin
export PATH=$GOBIN:/usr/local/bin:/usr/local/sbin:/Users/nwagensonner/bin:$PATH

# utility commands
alias update='sudo softwareupdate -i -a; brew update; brew upgrade --all; brew cleanup; npm update npm -g; npm update -g; sudo gem update --system; sudo gem update; git -C ~/dotfiles pull --rebase'

#suspend on afk
alias afk="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"
alias gbpurge='git branch --merged | grep -v "\*" | grep -v "master" | grep -v "develop" | grep -v "staging" | xargs -n 1 git branch -d'
# aliases
alias map="xargs -n1"
alias gop='cd $GOPATH'
alias ll='ls -l'
alias lld='ls -lF | grep '^d''
alias lsusb='system_profiler SPUSBDataType'
alias vnc='open /System/Library/CoreServices/Applications/Screen\ Sharing.app/'
alias top="top -o cpu"
#alias vim='nvim'
alias cd='cd -P'

export ANDROID_HOME=/usr/local/opt/android-sdk
export DOCKER_HOST=tcp://192.168.59.103:2376
